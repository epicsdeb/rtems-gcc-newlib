#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

ifeq (,$(findstring debug,$(DEB_BUILD_OPTIONS)))
CFLAGS:=$(filter-out -g,$(CFLAGS))
CXXFLAGS:=$(filter-out -g,$(CXXFLAGS))
endif

ifneq (,$(filter parallel=%,$(DEB_BUILD_OPTIONS)))
NUMJOBS = $(patsubst parallel=%,%,$(filter parallel=%,$(DEB_BUILD_OPTIONS)))
MAKEFLAGS += -j$(NUMJOBS)
endif

# These are used for cross-compiling and for saving the configure script
# from having to guess our platform (since we know it already)
DEB_HOST_GNU_TYPE   ?= $(shell dpkg-architecture -qDEB_HOST_GNU_TYPE)
DEB_BUILD_GNU_TYPE  ?= $(shell dpkg-architecture -qDEB_BUILD_GNU_TYPE)
DEB_TARGET_GNU_TYPE ?= powerpc-rtems4.9
CROSS= --target $(DEB_TARGET_GNU_TYPE) --build $(DEB_BUILD_GNU_TYPE) --host $(DEB_HOST_GNU_TYPE)

config.status: configure
	dh_testdir
ifneq "$(wildcard /usr/share/misc/config.sub)" ""
	cp -f /usr/share/misc/config.sub config.sub
endif
ifneq "$(wildcard /usr/share/misc/config.guess)" ""
	cp -f /usr/share/misc/config.guess config.guess
endif
	install -d build-powerpc
	CFLAGS="$(CFLAGS)" CXXFLAGS="$(CXXFLAGS)" \
cd build-powerpc && ../configure $(CROSS) --prefix=/usr \
--mandir=\$${prefix}/share/man --infodir=\$${prefix}/share/info \
CFLAGS="$(CFLAGS)" LDFLAGS="-Wl,-z,defs" \
--disable-nls --with-system-zlib --without-included-gettext \
--with-gnu-as --with-gnu-ld --enable-threads --with-newlib \
--enable-newlib-io-c99-formats --enable-languages=c,c++


build: build-stamp

build-stamp:  config.status 
	dh_testdir

	$(MAKE) -C build-powerpc $(MAKEFLAGS)

	touch $@

clean: 
	dh_testdir
	dh_testroot
	rm -f build-stamp 

	rm -rf build-powerpc
	rm -f config.sub config.guess

	dh_clean 

install: build
	dh_testdir
	dh_testroot
	dh_clean -k 
	dh_installdirs

	# Add here commands to install the package into debian/gcc-rtems4.9.
	$(MAKE) -C build-powerpc prefix=$(CURDIR)/debian/gcc-powerpc-rtems4.9/usr install

	rmdir $(CURDIR)/debian/gcc-powerpc-rtems4.9/usr/include
	rm -f $(CURDIR)/debian/gcc-powerpc-rtems4.9/usr/lib/*.a
	rm -rf $(CURDIR)/debian/gcc-powerpc-rtems4.9/usr/share/info
	rm -rf $(CURDIR)/debian/gcc-powerpc-rtems4.9/usr/share/man/man7


# Build architecture-independent files here.
binary-indep: build install
# We have nothing to do by default.

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs ChangeLog
	dh_installdocs
	dh_installexamples
	dh_installman
	dh_link
	#dh_strip # messes up libgcc.a and probably others
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install 
